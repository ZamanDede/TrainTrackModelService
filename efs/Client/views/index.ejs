<%- include('components/navbar') %>

  <head>
    <link rel="stylesheet" href="/css/pages/index.css">
  </head>


  <div class="container mt-5">
    <% if (error) { %>
      <%- include('components/error', { errorMessage: error }) %>
        <% } %>

          <!-- Welcome Heading -->
          <div class="text-center my-5">
            <h1>Welcome to TrainTrack</h1>
            <p>Your platform for uploading datasets, running models, and visualizing results.</p>
          </div>


          <!-- Hero Carousel -->
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/img/hero1.jpg" class="d-block w-100" alt="Upload and Explore Datasets">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Upload and Explore Datasets</h5>
                  <p>Easily upload datasets and explore them with powerful tools.</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/img/hero2.jpg" class="d-block w-100" alt="Run and Visualize Models">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Run and Visualize Models</h5>
                  <p>Execute pre-loaded models, visualize results, and analyze performance metrics.</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/img/hero3.jpg" class="d-block w-100" alt="Comprehensive Metrics Dashboard">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Comprehensive Metrics Dashboard</h5>
                  <p>View detailed metrics and performance reports on a single page.</p>
                </div>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>


          <!-- Overview Section -->
          <section class="mt-5">
            <h2 class="text-center mb-5">Key Features</h2>
            <div class="row">
              <div class="col-md-4">
                <div class="card feature-card text-center h-100">
                  <div class="card-body">
                    <i class="fas fa-database fa-3x mb-3"></i>
                    <h4 class="card-title">Upload and Explore Datasets</h4>
                    <p class="card-text">Upload datasets that are globally accessible and explore a wide range of
                      available datasets.</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card feature-card text-center h-100">
                  <div class="card-body">
                    <i class="fas fa-cogs fa-3x mb-3"></i>
                    <h4 class="card-title">Manual Model Integration</h4>
                    <p class="card-text">Manually integrate models from files and execute them within the platform.</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card feature-card text-center h-100">
                  <div class="card-body">
                    <i class="fas fa-chart-bar fa-3x mb-3"></i>
                    <h4 class="card-title">Run and Visualize Models</h4>
                    <p class="card-text">Execute models, visualize results, and access comprehensive metrics on one
                      page.</p>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Coming Soon Section -->
          <section class="mt-5">
            <h2 class="text-center mb-5">Coming Soon</h2>
            <p class="text-center mb-5">We are working on exciting new features, including:</p>
            <div class="row">
              <div class="col-md-4">
                <div class="card feature-card text-center h-100">
                  <div class="card-body">
                    <i class="fas fa-lock fa-3x mb-3"></i>
                    <h4 class="card-title">Private Datasets</h4>
                    <p class="card-text">Upload and manage datasets privately, accessible only to you.</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card feature-card text-center h-100">
                  <div class="card-body">
                    <i class="fas fa-user-circle fa-3x mb-3"></i>
                    <h4 class="card-title">User-Specific Model Uploads</h4>
                    <p class="card-text">Upload models specific to your account and run them securely on the platform.
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card feature-card text-center h-100">
                  <div class="card-body">
                    <i class="fas fa-chart-line fa-3x mb-3"></i>
                    <h4 class="card-title">Personalized Dashboards</h4>
                    <p class="card-text">Get personalized insights and reports based on your data and models.</p>
                  </div>
                </div>
              </div>
            </div>
          </section>


  </div>
